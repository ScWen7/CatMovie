<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--主界面底部RadioButton的样式-->
    <style name="MyBottomButtom">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_bottom_selector</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

        <!-- android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#333"
                android:drawableRight="@drawable/w_"
                android:layout_height="wrap_content"-->
    <style name="UserTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:drawableRight">@drawable/right_selector</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--FindMovie界面上的类型文字的样式-->
    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <!--<item name="tabMaxWidth">80dp</item> &lt;!&ndash;设置tab的宽度&ndash;&gt;-->
        <!--<item name="tabMinWidth">80dp</item> &lt;!&ndash;设置tab的宽度&ndash;&gt;-->
        <item name="tabIndicatorColor">#ccfe3f3f</item>  <!--指示器的颜色-->
        <item name="tabIndicatorHeight">1dp</item>     <!--指示器的高度-->
        <item name="tabSelectedTextColor">#fe3f3f</item> <!--被选中tab的字体颜色-->
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item> <!--字体的设置-->
        <!--<item name="tabBackground">@drawable/tab_bottom_selector</item>-->
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>   <!--字体大小-->
        <item name="android:textColor">#333</item>   <!--默认字体大颜色-->
        <item name="textAllCaps">false</item>  <!--是否自动转换成大写(如果是自定义样式必须是false)-->
    </style>
</resources>
