<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.atguigu.cateyesmovie.view.SpringView
        android:id="@+id/springview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--搜索框-->
                <include layout="@layout/search_title" />
                <!-- 类型 -->


                <com.atguigu.cateyesmovie.view.HorizontalListlView
                    android:id="@+id/ho_list_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp" />


                <com.atguigu.cateyesmovie.view.HorizontalListlView
                    android:id="@+id/ho_list_area"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp" />


                <com.atguigu.cateyesmovie.view.HorizontalListlView

                    android:id="@+id/ho_list_year"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ll_hot_parise"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_koubei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="热映口碑"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_movie_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_koubei"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="海洋奇缘"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp">

                            <ImageView
                                android:id="@+id/iv_bg1"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true" />

                            <ImageView
                                android:id="@+id/iv_for1"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vs" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/ll_expected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_qidai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="最受期待"
                            android:textColor="#f68679"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_movie_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_qidai"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="你的名字。"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp">


                            <ImageView
                                android:id="@+id/iv_bg2"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true" />

                            <ImageView
                                android:id="@+id/iv_for2"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vs" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ll_oversea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_haiwai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="25dp"
                            android:text="海外电影"
                            android:textColor="#f67b29"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_movie_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_haiwai"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:text="海洋奇缘"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp">


                            <ImageView
                                android:id="@+id/iv_bg3"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" />

                            <ImageView
                                android:id="@+id/iv_for3"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vs" />
                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/ll_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="TOP100"
                            android:textColor="#80c640"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_movie_name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_top"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="霸王别姬"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp">


                            <ImageView
                                android:id="@+id/iv_bg4"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true" />

                            <ImageView
                                android:id="@+id/iv_for4"
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:background="@drawable/vs" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#e1e1e1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="全球电影奖项"
                    android:textColor="#333"
                    android:textSize="18dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_find"
                    android:layout_width="match_parent"
                    android:layout_height="230dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_all_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/a1s"
                        android:text="全部电影奖项"
                        android:textColor="@color/red"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.atguigu.cateyesmovie.view.SpringView>

</LinearLayout>